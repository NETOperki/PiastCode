<div class="ui green tree secondary menu">
  <%= link_to("Strona główna", root_path, class:"item") %>
  <a class="item active">Spotkania</a>
  <%= link_to("Kontakt", contact_path, class:"item") %>
  <div class="right menu">
    <div class="item">
      <div class="ui icon input">
        <input placeholder="Search..." type="text">
        <i class="search link icon"></i>
      </div>
    </div>
  </div>
</div>
<%= image_tag("logo.jpg", class: "ui fluid image") %>
<div class="ui olive raised center aligned segment">
  <div id="eventmap" style='height: 324px;'></div>
</div>
<div class="ui olive raised center aligned segment">
  <div class="ui link cards">
    <% @events.each do |event| %>
      <div data-link="<%= event_path(event) %>" class="card event" data-where="<%= event.where %>">
        <div class="image">
          <%= image_tag('event_dummy.png') %>
        </div>
        <div class="content">
          <div class="header"><%= "#{event.user.name} #{event.user.surname}" %></div>
          <div class="meta">
            <a>Informacje</a>
          </div>
          <div class="description">
            <%= event.description %>
          </div>
        </div>
        <div class="extra content">

        <span class="left floated">
            <i class="user icon"></i>
            <%= event.joined.count %>
     </span>
          <span class="right floated">
            <i class="calendar icon"></i>
            <%= event.when.to_s :long %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div id="stopka" class="ui olive raised center aligned segment">
  <center><p>
  Copyright © 2017<br>
  Tomasz Król, Adam Badula, Agnieszka Madeła <br>
  PiastCode 2017
  </p></center>
</div>