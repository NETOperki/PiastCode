<link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Lato&amp;subset=latin-ext" rel="stylesheet"> 
<div class="ui green tree secondary  menu">
  <%= link_to("Strona główna", root_path, class:"item") %>
  <%= link_to("Spotkania", events_path, class:"item") %>
  <%= link_to("Kontakt", contact_path, class:"item") %>
  <div class="right menu">
    <div class="item">
      <div class="ui icon input">
        <input placeholder="Search..." type="text">
        <i class="search link icon"></i>
      </div>
    </div>
  </div>
</div>
<%= image_tag("logo.png", class: "ui fluid image") %>
<div class="ui olive raised center aligned segment">
		<div class="ui two column grid">
  			<div class="column">
  			<div class="ui olive column raised center aligned segment">
			<%= image_tag("#{@event.category}.jpg", class:"ui fluid image") %>
			</div><br><br>
			<span style="font-size:30px; font-weight:bold; text-transform:uppercase;"><%= @event.title %></span>
			<br><br>
			<span style="font-size:20px; line-height: 35px;">
			<b>Organizator: </b><%= "#{@event.user.name} #{@event.user.surname}"%><br>
			<b>Kategoria: </b><%= category_to_name @event.category %><br>
			<b>Opis: </b><%= @event.description %> <br>
			<b>Data: </b><%= @event.when.to_s :long %><br>
			<b>Ilość uczestniczących już osób: </b> <%= @event.joined.count %>
			</span>
			<br><br>
			<button class="ui green tree button">
  			Dołącz
			</button> 

			<%= link_to("http://www.facebook.com/share.php?u=http://localhost:3000#{url_for(@event)}", class:"ui facebook button") do %>
			<i class="facebook icon"></i>Udostępnij na Facebooku
			<% end %>
			<br><br>
			</div>
			<div class="column">
			<div class="ui olive column raised center aligned segment">
				<div id="createmap" style='height: 600px;'></div>
			</div>
			</div>
		</div>
</div>



<div id="stopka" class="ui olive raised center aligned segment">
